{
  "name": "brews",
  "version": "1.0.0",
  "description": "PoC Node Splice Machine Communication",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm run server | npm run client",
    "kill": "pm2 delete brews-client brews-server",
    "client": "NODE_ENV=development pm2 start webpack-dev-server --name brews-client -- --color",
    "server": "NODE_ENV=development pm2 start server/index.js --watch --name brews-server -- --color",
    "build": "NODE_ENV=production webpack",
    "start": "NODE_ENV=production pm2-runtime start server/index.js",
    "stop": "pm2-runtime delete brews-prod"
  },
  "dependencies": {
    "async": "^2.6.0",
    "chalk": "^2.3.0",
    "express": "^4.16.2",
    "html-webpack-plugin": "^2.26.0",
    "jdbc": "^0.6.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "segfault-handler": "^1.0.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/react": "^16.0.34",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.28.8",
    "style-loader": "^0.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/njnygaard/brews.git"
  }
}
